/**
 * Implements hook_preprocess_node().
 */
function compro_theme_preprocess_node(&$variables) {
  if ($variables['elements']['#node']->bundle() == 'report' && $variables['elements']['#view_mode'] == 'teaser') {
    $variables['content']['links'] = Link::fromTextAndUrl(t('Learn More'), Url::fromUri('internal:/node/' . $variables['elements']['#node']->nid->value))->toRenderable();
    $variables['content']['links']['#weight'] = 4;
    $variables['content']['links']['#attributes']['class'] = array('learn-more', 'button');
  }
}

