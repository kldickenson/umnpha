/**
 * Implements hook_preprocess_entity().
 */
function compro_theme_preprocess_eck_entity(&$variables) {
  if (isset($variables['content']['#section_type'])) {
    $variables['attributes']['class'] = array(
      'entity',
      'entity-section-type',
      str_replace('_', '-', $variables['content']['#section_type']->bundle()),
    );
  }

  if (isset($variables['content']['#component'])) {
    $variables['attributes']['class'] = array(
      'entity',
      'entity-component',
      str_replace('_', '-', $variables['content']['#component']->bundle()),
    );
  }

  if (isset($variables['content']['#section_type'])
    && $variables['content']['#section_type']->bundle() == 'section_type_longtext') {
    if ($variables['content']['#section_type']->hasField('longtext_top_border') && $variables['entity']['#section_type']->get('longtext_top_border')->value == 1) {
      $variables['attributes']['class'] = array_merge($variables['attributes']['class'], ['add-border']);
    }
  }
}

function compro_theme_preprocess_field_group_html_element(&$vars) {
  if ($vars['element']['#group_name'] == 'group_page_hero') {
    if (empty($vars['element']['field_page_hero']['#markup'])) {
      $vars['attributes']->addClass('no-hero-image');
    }
  }
}
