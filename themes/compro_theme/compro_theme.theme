/**
 * Implements hook_preprocess_page().
 */
function compro_theme_preprocess_page(&$variables) {
  // The 404 page.
  if (!isset($variables['node']) || $variables['node']->get('nid')->value != 3) {
    unset($variables['page']['content']['404menu']);
  }
}

